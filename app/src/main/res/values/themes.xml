<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sloplo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorOnBackground">@color/navi_default</item>
        <item name="colorOnSurface">@color/text_grey</item>
        <item name="android:statusBarColor">@color/main_color</item>
    </style>

    <style name="Theme.Sloplo" parent="Base.Theme.Sloplo" />

    <!-- Bottom Navi -->
    <style name="Theme.Navi.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Base.Theme.Sloplo">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>