<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".JournalFragment">

    <!-- 앱 아이콘 -->
    <ImageView
        android:id="@+id/ic_app_sloplo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_app_default"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 캘린더뷰 -->
    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ic_app_sloplo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cv_daySize="48dp" />

    <!-- 기록 요약 뷰 -->
    <LinearLayout
        android:id="@+id/logDetailLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/logDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.04.11 (금) 2.5km"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/logSummaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="담배꽁초 50개 주움"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/logStartPlaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 반포한강공원 | 50분"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/logTrashText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 총 쓰레기: 50개"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>