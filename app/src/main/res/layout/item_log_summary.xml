<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@android:color/white"
    android:elevation="6dp"
    android:radius="16dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp">

    <!-- 상세보기 버튼-->
    <ImageButton
        android:id="@+id/buttonDetail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="상세보기"
        android:src="@drawable/ic_arrow_forward" />

    <LinearLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <!-- 날짜 -->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_calendar_text" />
            <TextView
                android:id="@+id/summaryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/tmoney_round_wind_regular"
                android:text=" 2025.04.11"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
            <!-- 시간 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_time" />
            <TextView
                android:id="@+id/summaryTime"
                android:text=" 50분"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:textColor="@android:color/black" />
            <!--거리-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_distance" />
            <TextView
                android:id="@+id/summaryDistance"
                android:text=" 2.5km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- 제목 -->
        <TextView
            android:id="@+id/summaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="담배꽁초 50개 주움"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans_kr_extra_bold"
            android:includeFontPadding="false" />

        <!-- 주소 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_address_text" />

            <TextView
                android:id="@+id/summaryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text=" 대한민국 서울특별시 영등포구 선유동 2로 42"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 쓰레기 개수 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_bin_text" />
            <TextView
                android:id="@+id/summaryTrash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 수거한 쓰레기: 50개"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:textSize="13sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
